<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Summer Festival - Stages</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/style/style.css">
</head>
<body>
    <%- include('partials/header') %>
    <main class="main">
        <section class="stages section">
            <h2>Stages and Areas: Where the Magic Happens</h2>
            <div class="stages-container">
                <% stages.forEach(stage => { %>
                    <div class="stage" id="<%= stage.stage_name.toLowerCase().replace(/ /g, '-').replace(/[^a-z0-9-]/g, '') %>">
                        <h3><%= stage.stage_name %></h3>
                        <img src="/res/images/<%= stage.image %>" alt="<%= stage.stage_name %>">
                        <p><%= stage.description %></p>
                        <div class="performances">
                            <% if (stage.performances) { %>
                                <% stage.performances.forEach(performance => { %>
                                    <% if (performance.artist_name.includes('The Rockers')) { %>
                                        <a href="/lineup#headliner-the-rockers" class="performance">
                                            <span class="time"><%= performance.time %></span>
                                            <span class="artist-name"><%= performance.artist_name %></span>
                                        </a>
                                    <% } else if (performance.artist_name.includes('DJ Spinmaster')) { %>
                                        <a href="/lineup#special-guest-dj-spinmaster" class="performance">
                                            <span class="time"><%= performance.time %></span>
                                            <span class="artist-name"><%= performance.artist_name %></span>
                                        </a>
                                    <% } else if (performance.artist_name.includes('The Jazz Ensemble')) { %>
                                        <a href="/lineup#band-the-jazz-ensemble" class="performance">
                                            <span class="time"><%= performance.time %></span>
                                            <span class="artist-name"><%= performance.artist_name %></span>
                                        </a>
                                    <% } else if (performance.artist_name.includes('Melody Waves')) { %>
                                        <a href="/lineup#singer-melody-waves" class="performance">
                                            <span class="time"><%= performance.time %></span>
                                            <span class="artist-name"><%= performance.artist_name %></span>
                                        </a>
                                    <% } else if (performance.artist_name.includes('Laughter Therapy')) { %>
                                        <a href="/lineup#comedy-act-laughter-therapy" class="performance">
                                            <span class="time"><%= performance.time %></span>
                                            <span class="artist-name"><%= performance.artist_name %></span>
                                        </a>
                                    <% } else if (performance.artist_name.includes('The Hip Hop Crew')) { %>
                                        <a href="/lineup#dance-group-the-hip-hop-crew" class="performance">
                                            <span class="time"><%= performance.time %></span>
                                            <span class="artist-name"><%= performance.artist_name %></span>
                                        </a>
                                    <% } else if (performance.artist_name.includes('Strings Attached')) { %>
                                        <a href="/lineup#acoustic-performance-strings-attached" class="performance">
                                            <span class="time"><%= performance.time %></span>
                                            <span class="artist-name"><%= performance.artist_name %></span>
                                        </a>
                                    <% } else if (performance.artist_name.includes('Rising Star')) { %>
                                        <a href="/lineup#opening-act-rising-star" class="performance">
                                            <span class="time"><%= performance.time %></span>
                                            <span class="artist-name"><%= performance.artist_name %></span>
                                        </a>
                                    <% } else { %>
                                        <div class="performance">
                                            <span class="time"><%= performance.time %></span>
                                            <span class="artist-name"><%= performance.artist_name %></span>
                                        </div>
                                    <% } %>
                                <% }) %>
                            <% } %>
                        </div>
                    </div>
                <% }) %>
            </div>
        </section>
    </main>
    <%- include('partials/footer') %>
    <script src="/script/script.js"></script>
</body>
</html>
